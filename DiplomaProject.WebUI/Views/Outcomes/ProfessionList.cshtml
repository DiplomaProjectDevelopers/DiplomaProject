@model IEnumerable<DiplomaProject.Domain.ViewModels.ProfessionViewModel>

@{
    ViewData["Title"] = "Մասնագիտությունների ցանկը";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Մասնագիտությունների ցանկ</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.Department)
            </td>
            <th>
                Գործողություններ
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    <p data-placement="top" data-toggle="tooltip">
                        <a asp-action="Edit" asp-controller="Outcomes" asp-route-professionId="@item.Id" class="btn btn-success btn-xs" data-toggle="tooltip" title="Կատարել հարցում">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a asp-action="MakeDependencies" asp-controller="Outcomes" asp-route-professionId="@item.Id" class="btn btn-primary btn-xs" data-toggle="tooltip" title="Վերջնարդյունքների կապերը">
                            <span class="glyphicon glyphicon-wrench"></span>
                        </a>
                        <a asp-action="BuildSubgraphs" asp-controller="Outcomes" asp-route-professionId="@item.Id" class="btn btn-info btn-xs" data-toggle="tooltip" title="Առարկաների կազմում">
                            <span class="glyphicon glyphicon-book"></span>
                        </a>
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>
